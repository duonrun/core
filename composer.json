{
	"name": "duon/core",
	"description": "Duon core web framework",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "ebene fÃ¼nf GmbH",
			"email": "info@ebenefuenf.de"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=8.3",
		"duon/cli": "dev-main",
		"duon/registry": "dev-main",
		"duon/router": "dev-main",
		"laminas/laminas-httphandlerrunner": "^2.4",
		"psr/http-factory": "^1.0",
		"psr/http-message-implementation": "^1.0"
	},
	"require-dev": {
		"duon/dev": "dev-main",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"ernst/coverlyzer": "^0.2",
		"guzzlehttp/psr7": "^2",
		"laminas/laminas-diactoros": "^2 || ^3",
		"nyholm/psr7": "^1.5",
		"nyholm/psr7-server": "^1",
		"phpunit/phpunit": "^12.0",
		"vimeo/psalm": "^6.10"
	},
	"autoload": {
		"psr-4": {
			"Duon\\Core\\": "src"
		},
		"files": [
			"src/functions.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Core\\Tests\\": "tests"
		}
	},
	"scripts": {
		"test": [
			"composer docstest",
			"./vendor/bin/phpunit --testdox --no-coverage --colors=always"
		],
		"check": "./vendor/bin/psalm --no-cache",
		"check-github": "./vendor/bin/psalm --output-format=github --shepherd",
		"lint": "./vendor/bin/phpcs -s -p src tests",
		"coverage": [
			"./vendor/bin/phpunit --testdox --coverage-clover=clover.xml --coverage-text --coverage-php=coverage/cover.php  --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer docstest",
			"composer coverage",
			"composer check",
			"composer lint"
		],
		"github": [
			"composer docstest",
			"composer coverage",
			"composer check-github",
			"composer lint"
		],
		"docs": [
			"composer docstest",
			"./venv/bin/python ./venv/bin/mkdocs build"
		],
		"docserve": "./venv/bin/python ./venv/bin/mkdocs serve",
		"docstest": "./vendor/bin/docs-test-runner ./docs/code"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
