{
	"name": "duon/core",
	"description": "Duon core web framework",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Thomas Ernst",
			"email": "duon@ebenefuenf.de"
		}
	],
	"homepage": "https://duon.run/core",
	"require": {
		"php": "^8.5",
		"duon/cli": "^0.1",
		"duon/registry": "^0.1",
		"duon/router": "^0.1",
		"laminas/laminas-httphandlerrunner": "^2.4",
		"psr/http-factory": "^1.0",
		"psr/http-message-implementation": "^1.0"
	},
	"require-dev": {
		"duon/dev": "^2.5",
		"guzzlehttp/psr7": "^2",
		"laminas/laminas-diactoros": "^2 || ^3",
		"nyholm/psr7": "^1.5",
		"nyholm/psr7-server": "^1"
	},
	"autoload": {
		"psr-4": {
			"Duon\\Core\\": "src"
		},
		"files": [
			"src/functions.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Core\\Tests\\": "tests"
		}
	},
	"scripts": {
		"test": [
			"composer docstest",
			"./vendor/bin/phpunit --testdox --no-coverage --colors=always"
		],
		"check": "./vendor/bin/psalm --no-cache",
		"check-github": "./vendor/bin/psalm --output-format=github --shepherd",
		"lint": "./vendor/bin/phpcs -s -p src tests",
		"coverage": [
			"./vendor/bin/phpunit --testdox --coverage-clover=clover.xml --coverage-text --coverage-php=coverage/cover.php  --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer docstest",
			"composer coverage",
			"composer check",
			"composer lint"
		],
		"github": [
			"composer docstest",
			"composer coverage",
			"composer check-github",
			"composer lint"
		],
		"docstest": "./vendor/bin/docs-test-runner ./docs/code"
	}
}
